<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiApp.GPSPage"
             Title="GPS Signal">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Current GPS Signal:" FontSize="Large" HorizontalOptions="Center"/>
            <Label x:Name="GpsSignalLabel" Text="Fetching..." FontSize="Medium" HorizontalOptions="Center"/>
            <WebView Source="https://gurugaia.royal.club.tw/eHR" 
                Grid.Row="1"
                WidthRequest="375"
                HeightRequest="667"
                VerticalOptions="Start" 
                HorizontalOptions="Center" />
        </StackLayout>
    </ScrollView>
</ContentPage>
